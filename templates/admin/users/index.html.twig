{% block div %}

	<div class='flex flex-col items-center justify-center w-full h-full'>
		<div class='flex flex-col items-center justify-center w-full h-full p-3'>
			<h1 class='text-xl text-left uppercase block text-gray-400 font-semibold'>Utilisateurs</h1>
			<table class='w-full h-full mt-2'>
				<thead>
					<tr>
						<th class='text-center border h-10'>Nom</th>
						<th class='text-center border h-10'>Pr√©nom</th>
						<th class='text-center border h-10'>Pseudo</th>
						<th class='text-center border h-10'>Email</th>
